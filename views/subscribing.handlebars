<div class="col-md-12 col-12 row">
  <div class="col-md-3 col-12 list">
    <ul class="list-group list-group-flush">
      <h4>會員專區</h4>
      <li class="list-group-item">
        <a href="/users/profile">個人資料</a>
      </li>
      <li class="list-group-item">
        <a href="/users/orders">訂單查詢</a>
      </li>
      <li class="list-group-item">
        <a href="/users/subscribing">正在訂閱</a>
      </li>
    </ul>
  </div>
  <div class="col-md-9 col-12" style="padding:0">
    <h1 class="mt-3">正在訂閱中<i class="fa fa-check"></i></h1>
    <br>
    <div class="col-md-12 col-12 row">
      {{#each orders}}
      {{#ifCond this.Product.name "體驗一箱"}}
      {{else}}
      <div class="card col-md-6 col-lg-4 col-sm-8 col-10 card-subscribing">
        <img src="{{this.Product.image}}" class="card-img-top" height="240px" alt="方案圖片">
        <div class="card-body">
          <h5>{{this.Product.name}}</h5>
          <h6>{{this.Product.english_name}}</h6>
          <h6>{{date this.createdAt}}</h6>
          <p>方案到期：{{due this.createdAt}}</p>
          <a class="btn btn-outline-dark" href="/users/{{this.id}}/cancel">取消訂閱</a>
        </div>
      </div>
      {{/ifCond}}
      {{/each}}
    </div>
  </div>
</div>